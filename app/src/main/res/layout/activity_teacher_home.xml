<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher_Controller.Teacher_home">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="58dp" />

    <TextView
        android:layout_width="293dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/circle2"
        android:gravity="center"
        android:text="welcome!"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:textSize="40dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="58dp" />

    <Button
        android:layout_width="324dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/circle2"
        android:gravity="center"
        android:text="open meeting"
        android:id="@+id/openMeet"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="58dp" />

    <Button
        android:layout_width="324dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/circle2"
        android:gravity="center"
        android:text="open quiz"
       android:id="@+id/quizz"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="58dp" />

    <Button
        android:layout_width="324dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/circle2"
        android:gravity="center"
        android:text="open chat"
        android:id="@+id/chat"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="58dp" />

    <Button
        android:layout_width="324dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/circle2"
        android:gravity="center"
        android:text="open test"
        android:id="@+id/test"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40dp"
        android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="58dp" />

        <Button
            android:layout_width="324dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/circle2"
            android:gravity="center"
            android:text="open records"
            android:id="@+id/record"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="58dp" />

        <Button
            android:layout_width="324dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/circle2"
            android:gravity="center"
            android:text="open summary"
            android:id="@+id/summary"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>