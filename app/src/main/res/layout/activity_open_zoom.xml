<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"
    tools:context=".PresentaionLayer.Materials.Meeting.OpenZoom">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

       <LinearLayout
           android:layout_width="248dp"
           android:layout_height="100dp"
           android:layout_gravity="center"

           android:orientation="horizontal">

           <com.airbnb.lottie.LottieAnimationView
               android:layout_width="89dp"
               android:id="@+id/lottie"
               android:layout_height="match_parent"
               app:lottie_rawRes="@raw/meeting_open_anim" />

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:text="Meeting"
               android:textColor="@color/colorAccent"
               android:textSize="30dp"
               android:textStyle="bold"/>

       </LinearLayout>

       <TextView
           android:layout_width="match_parent"
           android:layout_height="17dp" />


    <EditText
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="id" />


    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password" />
    <EditText
        android:id="@+id/link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="link" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColorHint="#000000"

        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <AutoCompleteTextView
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"


            />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="93dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/description"
            android:layout_width="97dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/des" />

        <TextView
            android:layout_width="38dp"
            android:layout_height="match_parent" />

        <Button
            android:layout_width="81dp"
            android:layout_height="97dp"
            android:layout_gravity="center"
            android:id="@+id/schedule"
            android:background="@drawable/sch" />
    </LinearLayout>

    <EditText
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="time (minutes)" />

    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="price" />


    <EditText
        android:id="@+id/place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="location" />
    <EditText
        android:id="@+id/limit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="limit students" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/meet"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/circle2"
        android:text="add meeting"
        android:textSize="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp" />
   </LinearLayout>
</ScrollView>